// Prisma Schema for TrainTrack
// Database: SQLite

generator client {
  provider   = "prisma-client-js"
  output     = "../node_modules/.prisma/client"
  engineType = "client"
}

datasource db {
  provider = "sqlite"
}

// ============================================
// CLASS MODEL
// ============================================
model Class {
  id          String    @id @default(cuid())
  name        String
  description String?
  ageRange    String?   // e.g., "Ages 3-5", "Ages 5-7"
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  students    Student[]
  lessons     Lesson[]
}

// ============================================
// STUDENT MODEL
// ============================================
model Student {
  id                 String            @id @default(cuid())
  firstName          String
  lastName           String
  dateOfBirth        DateTime
  classId            String
  class              Class             @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  // Profile fields stored as JSON strings
  diagnoses          String            @default("[]")  // JSON array of strings
  strengths          String            @default("[]")  // JSON array of strings
  challenges         String            @default("[]")  // JSON array of strings
  interests          String            @default("[]")  // JSON array of strings
  sensoryNeeds       String            @default("[]")  // JSON array of strings
  communicationStyle String            @default("")
  supportStrategies  String            @default("[]")  // JSON array of strings
  triggers           String            @default("[]")  // JSON array of strings
  calmingStrategies  String            @default("[]")  // JSON array of strings
  teacherNotes       String            @default("")    // Free-form teacher notes
  
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  
  // Relations
  progress           StudentProgress[]
}

// ============================================
// STUDENT PROGRESS MODEL
// Tracks progress for each AET subcategory per student
// ============================================
model StudentProgress {
  id             String   @id @default(cuid())
  studentId      String
  student        Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  subcategoryId  String   // References the AET framework subcategory ID (e.g., "ci-1-1", "su-2-3")
  level          Int      @default(0)  // 0 = not started, 1-4 = progression levels
  completed      Boolean  @default(false)
  plan           String?  // Generated or manual plan text
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@unique([studentId, subcategoryId])  // Each student can only have one progress record per subcategory
}

// ============================================
// LESSON MODEL
// Stores generated class lesson plans
// ============================================
model Lesson {
  id                String   @id @default(cuid())
  classId           String
  class             Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  
  curriculumArea    String   // e.g., "Mathematics", "Literacy"
  lessonTopic       String   // e.g., "Counting and one-to-one correspondence"
  learningObjective String   // The single learning intention
  additionalNotes   String?  // Optional teacher notes
  content           String   // The full generated lesson plan (markdown)
  visualSchedule    String?  // JSON string of visual schedule steps
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
